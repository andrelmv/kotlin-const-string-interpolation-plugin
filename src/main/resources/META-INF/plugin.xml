<idea-plugin>
    <id>io.github.andrelmv.plugin.inlay</id>
    <name>Kotlin Constant String Interpolation</name>
    <vendor email="andrelmv@gmail.com" url="https://github.com/andrelmv/kotlin-const-string-interpolation-plugin">Andr√© Monteiro</vendor>


    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">

        <codeInsight.inlayProvider
                implementationClass="io.github.andrelmv.plugin.inlay.InlayStringInterpolationProvider"
                language="kotlin"/>

    </extensions>
</idea-plugin>
